#!/usr/bin/env bash

echo -e "$USER" >/tmp/User
pwd >>/tmp/User
pkexec bash $(pwd)/scripts/realease.sh

icon="v2raya.png"
choice=$(zenity --list --checklist --window-icon="$icon" --title="Optins" --text="–î–æ–ø–æ–ª–Ω–µ–Ω–∏—è:" --separator=" " --column="üîÜ" --column="" --column="" --hide-column=2 \
  true "font" "–£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å Emoji font" true "servise" "–í–∫–ª—é—á–∏—Ç—å —Å–µ—Ä–≤–∏—Å v2raya" false "no_passwd" "–æ—Ç–∫–ª—é—á–∏—Ç—å –≤–≤–æ–¥ –ø–∞—Ä–æ–ª—è" --height=300 --width=450)

if [[ $? = "0" ]]; then
  pkexec bash $(pwd)/scripts/post_install.sh $choice
fi

if [[ -f "$HOME"/'–†–∞–±–æ—á–∏–π —Å—Ç–æ–ª'/v2raya ]]; then
  ln -s /usr/share/applications/v2raya.desktop "$HOME"/'–†–∞–±–æ—á–∏–π —Å—Ç–æ–ª'/v2raya
elif [[ -f "$HOME"/'Desktop'/v2raya ]]; then
  ln -s /usr/share/applications/v2raya.desktop "$HOME"/'Desktop'/v2raya
fi
